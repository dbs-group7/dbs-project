    <div class="main-wrapper">
	    <section class="cta-section theme-bg-light py-5">
		    <div class="container text-center">
			    <h2 class="heading">Add information regarding a movie</h2>
			    <div class="intro"></div>
			   
		    </div><!--//container-->
	    </section>
	    <section class="blog-list px-1 py-1 p-md-1" style="margin-top:10px;">
		    <div class="container">
			    <div class="item mb-5">
				    <div class="media">
					    
					    <div class="media-body">
						 <p><i>Note: <span style="color:red;">*</span> Indicates required fields.</i></p>
					<form action="/insert_article_form" method="POST" enctype="multipart/form-data">
						<div class="form-group">
							<label><span style="color:red;">*</span>Title</label>
							<input type="text" class="form-control" placeholder="Movie title.." name="title" required>
						</div>
						<div class="form-group">
							<label><span style="color:red;">*</span>Movie poster or other supporting documents</label>
							<input type="file" name="img" id="img" required >
						</div>
						<div class="form-group">
						<span style="color:red;">*</span> Rating <select name="rating" >
							<option value="">--Choose between 1-5--</option>
							<option value="1">1</option>
							<option value="2">2</option>
							<option value="3">3</option>
							<option value="4">4</option>
							<option value="5">5</option>
						</select>	
						</div>
						
						
						<div class="form-group">
							<label><span style="color:red;">*</span>Released in </label>
							<input type="number" class="form-control" placeholder="2012, 2020,.." name="year" required>
						</div>
						<div class="form-group">
							<label><span style="color:red;">*</span>Movie length</label>
							<input type="text" class="form-control" placeholder="In 'hr' and 'min' only" name="length" required>
						</div>
						<div class="form-group">
							<label><span style="color:red;">*</span>Genre</label>
							<input type="text" class="form-control" placeholder="Horror, Thriller,.." name="genre" required>
						</div>
						<div class="form-group">
							<label><span style="color:red;">*</span>Featuring actors</label>
							<input type="text" class="form-control" placeholder="If more than one (Johan, Davis,..)" name="actors" required>
						</div>
						<div class="form-group">
							<label><span style="color:red;">*</span>Directed by</label>
							<input type="text" class="form-control" placeholder="If more than one (Johan, Davis,..)" name="director" required>
						</div>
						<div class="form-group">
							<label><span style="color:red;">*</span>Description</label>
							<textarea rows="5" cols="10" style=""  class="form-control" placeholder="Not more than 300 words" name="desc" required></textarea>
							
						</div>
						<button type="submit" class="btn btn-primary">Publish</button>
					</form>
						 
						 
						 
					    </div><!--//media-body-->
				    </div><!--//media-->
